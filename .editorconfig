# EditorConfig ayuda a que todos los editores sigan el mismo estilo básico
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
# Permite espacios al final (a veces útiles en markdown)
trim_trailing_whitespace = false
